{
  "name": "xunit-test-metrics-action",
  "version": "0.0.1",
  "description": "Parse an xUnit-formatted *.xml file to upload a metrics.json file for further processing.",
  "main": "metrics.js",
  "repository": "https://github.com/AntelopeIO/xunit-test-metrics-action",
  "homepage": "https://github.com/AntelopeIO/xunit-test-metrics-action",
  "author": {
    "name": "AntelopeIO Automation",
    "email": "zach.butler+xunit-test-metrics-action@eosnetwork.com",
    "url": "https://antelope.io"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
      "indent": [
        "error",
        4
      ]
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "coverage",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "coverage",
      "node_modules"
    ]
  }
}
